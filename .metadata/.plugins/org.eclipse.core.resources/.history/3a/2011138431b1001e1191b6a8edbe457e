package exception;

class Bank
{
	double balance;
	
	public void getBalance()
	{
		System.out.println("Current balance is : "+balance);
	}
	
	public void deposit(double amt)
	{
		balance = balance+amt;
	}
}

public class E003_CustomeExcpetion {
	public static void main(String[] args) {
		
		Bank b = new Bank();
		b.getBalance();
		b.deposit(5000);
		b.getBalance();
	}
}
